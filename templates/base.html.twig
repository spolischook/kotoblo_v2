<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Serhii Polishchuk">
    <meta name="description" content="">
    <title>{% block title %}Serhii Polishchuk{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% if '127.0.0.1' == app.request.getHost() or 'localhost' == app.request.getHost() %}
        <link rel="stylesheet" href="/css/bootstrap.css">
        <script src="/js/jquery.js"></script>
    {% else %}
        <link rel="stylesheet" href="https://d2ck16jxw8uc3k.cloudfront.net/css/bootstrap_4.1.3.min.css">
        <script src="https://d2ck16jxw8uc3k.cloudfront.net/js/jquery_3.3.1.min.js"></script>
        <script src="https://d2ck16jxw8uc3k.cloudfront.net/js/bootstrap.4.1.3.min.js"></script>
    {% endif %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet"
              href="https://d2ck16jxw8uc3k.cloudfront.net/css/tomorrow-night_9.12.0.min.css">
        <script src="https://d2ck16jxw8uc3k.cloudfront.net/js/highlight_9.12.0.min.js"></script>
        <script src="https://d2ck16jxw8uc3k.cloudfront.net/js/highlightjs-line-numbers_2.1.0.min.js"></script>
        <style>
            /* for block of numbers */
            td.hljs-ln-numbers {
                -webkit-touch-callout: none;
                -webkit-user-select: none;
                -khtml-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
                user-select: none;

                text-align: center;
                color: #ccc;
                border-right: 1px solid #CCC;
                vertical-align: top;
                padding-right: 5px;

                /* your custom style here */
            }

            /* for block of code */
            td.hljs-ln-code {
                padding-left: 10px;
            }
        </style>
    {% endblock %}
</head>
<body>
{% block body %}
    {% block navigation %}
        <div class="container">
            {% include 'components/nav.html.twig' %}
        </div>
    {% endblock %}
    <main class="container">
        {% block container %}
            <div class="content" style="max-width:1500px">
                {% block content %}
                {% endblock %}
            </div>
        {% endblock %}
    </main>
    <footer class="footer">
        <div class="container">
            <span class="text-muted">Copyright Â© 2010-{{ "now"|date("Y") }} Serhii Polishchuk</span>
        </div>
    </footer>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/scripts.js') }}"></script>
    <script type="text/x-mathjax-config">
        MathJax.Hub.Config({
            tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]},
            displayAlign: "left"
        });
    </script>
    <script type="text/javascript" async
            src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.5/latest.js?config=TeX-MML-AM_CHTML">
    </script>
    <script>
        hljs.initHighlightingOnLoad();
        hljs.initLineNumbersOnLoad();
    </script>
{% endblock %}
</body>
</html>
