<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Serhii Polishchuk">
    <meta name="description" content="">
    <title>{% block title %}Serhii Polishchuk{% endblock %}</title>
    <link rel="stylesheet" href="https://d2ck16jxw8uc3k.cloudfront.net/css/bootstrap_4.1.3.min.css">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <script src="https://d2ck16jxw8uc3k.cloudfront.net/js/jquery_3.3.1.min.js"></script>
    <script src="https://d2ck16jxw8uc3k.cloudfront.net/js/bootstrap.4.1.3.min.js"></script>
</head>
<body>
{% block body %}
    {% block navigation %}
        <div class="container">
            {% include 'components/nav.html.twig' %}
        </div>
    {% endblock %}
    <main class="container">
        {% block container %}
            <div class="content" style="max-width:1500px">
                {% block content %}
                {% endblock %}
            </div>
        {% endblock %}
    </main>
    <footer class="footer">
        <div class="container">
            <span class="text-muted">Copyright Â© 2010-{{ "now"|date("Y") }} Serhii Polishchuk</span>
        </div>
    </footer>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/scripts.js') }}"></script>
    <script type="text/x-mathjax-config">
      MathJax.Hub.Config({
        extensions: ["tex2jax.js"],
        jax: ["input/TeX", "output/HTML-CSS"],
        tex2jax: {
          inlineMath: [ ['$','$'], ["\\(","\\)"] ],
          displayMath: [ ['$$','$$'], ["\\[","\\]"] ],
          processEscapes: true
        },
        "HTML-CSS": { fonts: ["TeX"] }
      });
    </script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.5/MathJax.js"></script>
{% endblock %}
</body>
</html>
